{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "templates": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/template"
      }
    },
    "serise": {
      "type": "array",
      "description": "You can create series by grouping multiple templates. It can be used to unite continuous contents.",
      "items": {
        "$ref": "#/definitions/serise"
      }
    }
  },
  "required": [
    "templates",
    "serise"
  ],
  "definitions": {
    "id": {
      "type": "string",
      "description": "Special characters only allow `-` and `:`. Please use the same format as `group-name:content-name`.",
      "pattern": "^([a-z0-9-:]+)$"
    },
    "template": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "title": {
          "type": "string",
          "minLength": 7,
          "maxLength": 50
        },
        "images": {
          "type": "array",
          "description": "Please register the image at 16/9. These are 640px/320px, 1280px/720px, 1920px/1080px.",
          "items": {
            "type": "string",
            "pattern": "(.*).(png|jpg|jpeg|webp|avif|svg)$",
            "description": "Please write the image url based on the images directory of this `terra-money/templates` repository. For example, add a file `images/template-id/image.png`, and enter `images: [template-id/image.png]`."
          }
        },
        "github": {
          "type": "string",
          "pattern": "^https://github.com/(.*$)"
        },
        "categories": {
          "type":"array",
          "items": {
            "type": "string",
            "enum": [
              "smart_contract",
              "web_app"
            ]
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minItems": 1
          }
        },
        "forks": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^https://github.com/(.*$)",
            "minItems": 1
          }
        }
      },
      "required": [
        "id",
        "title",
        "images",
        "github",
        "categories"
      ]
    },
    "serise": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "title": {
          "type": "string",
          "minLength": 7,
          "maxLength": 50
        },
        "templates": {
          "type": "array",
          "description": "List of templates[].id",
          "items": {
            "$ref": "#/definitions/id"
          }
        }
      },
      "required": [
        "id",
        "title",
        "templates"
      ]
    }
  }
}